source "https://rubygems.org"

# This will help ensure your local setup matches GitHub Pages
gem "github-pages", group: :jekyll_plugins

# Windows and JRuby compatibility
gem "webrick", "~> 1.7" if RUBY_VERSION >= "3.0"

# Performance optimization
gem "liquid-c", group: :jekyll_plugins if RUBY_PLATFORM !~ /x86_64-darwin/ 